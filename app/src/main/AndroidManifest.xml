<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dietdecoder.dietdecoder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DietDecoder"
        tools:targetApi="31" >


      <activity android:name=".activity.MainActivity"
        android:exported="true"
        android:label="@string/app_name"         >

        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

      </activity>


      <activity android:name=".activity.ResourcesActivity"
        android:exported="false"/>


      <activity android:name=".activity.foodlog.FoodLogActivity"
        android:exported="false"/>
      <activity        android:name=".activity.foodlog.AreYouSureActivity"
        android:exported="false" />
      <activity        android:name=".activity.foodlog.DetailFoodLogActivity"
        android:exported="false" />
      <activity        android:name=".activity.foodlog.NewFoodLogChoicesActivity"
          android:exported="false" />
      <activity        android:name=".activity.foodlog.EditFoodLogActivity"
        android:exported="false" />


      <activity android:name=".activity.ingredient.IngredientActivity"
        android:exported="false"/>
      <activity        android:name=".activity.ingredient.DeleteIngredientActivity"
        android:exported="false" />
      <activity        android:name=".activity.ingredient.DetailIngredientActivity"
        android:exported="false" />
      <activity        android:name=".activity.ingredient.NewIngredientActivity"
        android:exported="false" />
      <activity        android:name=".activity.ingredient.EditIngredientActivity"
        android:exported="false" />


      <activity android:name=".activity.recipe.RecipeActivity"
        android:exported="false"/>
      <activity        android:name=".activity.recipe.NewRecipeActivity"
        android:exported="false" />
      <activity        android:name=".activity.recipe.EditRecipeActivity"
        android:exported="false" />


      <activity android:name=".activity.symptom.SymptomActivity"
        android:exported="false" />
      <activity        android:name=".activity.symptom.DetailSymptomActivity"
        android:exported="false" />

    </application>

</manifest>
