<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dietdecoder.dietdecoder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DietDecoder"
        tools:targetApi="31" >

      <activity
        android:name=".activities.MainActivity"
        android:exported="true"
        android:label="@string/app_name" >
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />

          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>


      <activity android:name=".activities.IngredientActivity"
        android:exported="false"/>
      <activity android:name=".activities.RecipeActivity"
        android:exported="false"/>
      <activity android:name=".activities.LogActivity"
        android:exported="false"/>

      <activity
        android:name=".activities.DeleteIngredientActivity"
        android:exported="false" />
      <activity
        android:name=".activities.NewIngredientActivity"
        android:exported="false" />
      <activity
        android:name=".activities.EditIngredientActivity"
        android:exported="false" />
      <activity
        android:name=".activities.NewRecipeActivity"
        android:exported="false" />
      <activity
        android:name=".activities.EditRecipeActivity"
        android:exported="false" />

    </application>

</manifest>
