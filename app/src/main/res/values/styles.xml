<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="textview_title">
    <item name="android:textColor">@color/color_title</item>
    <item name="android:textSize">@dimen/title</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_height">@dimen/layout_height_title</item>
  </style>

  <style name="textview_subtitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/tiny_padding</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/color_title</item>
    <item name="android:textSize">@dimen/subtitle</item>
  </style>

  <style name="textview_item">
    <item name="android:layout_margin">@dimen/small_padding</item>
    <item name="android:paddingLeft">@dimen/small_padding</item>
    <item name="android:paddingRight">@dimen/small_padding</item>
    <item name="android:paddingTop">@dimen/smallest_padding</item>
    <item name="android:paddingBottom">@dimen/smallest_padding</item>
    <item name="android:background">@color/white</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>


  <style name="textview_item_option">
    <item name="android:layout_margin">@dimen/small_padding</item>
    <item name="android:padding">@dimen/smallest_padding</item>
    <item name="android:background">@color/lightest_green</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="edittext">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:inputType">textAutoComplete</item>
    <item name="android:drawableBottom">@color/black</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
    <item name="android:layout_margin">@dimen/tiny_padding</item>
  </style>

  <style name="textview_subsubtitle">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">@dimen/subsubtitle</item>
  </style>


  <style name="textview_edit_old_values">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">@dimen/subsubtitle</item>
  </style>

  <style name="textview_past_answer">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="textview_main_content">
    <item name="fontFamily">sans-serif-light</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="textview">
    <item name="fontFamily">sans-serif-light</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="button_save">
    <item name="android:background">@color/green_500</item>
    <item name="android:textColor">@color/button_label</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="button_choose">
    <item name="android:textColor">@color/button_label</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="button_cancel">
    <item name="android:background">@color/green_200</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textSize">@dimen/normal_textsize</item>
  </style>

  <style name="button_main">
    <item name="android:background">@color/green_500</item>
    <item name="android:textColor">@color/button_label</item>
    <item name="android:textSize">@dimen/subtitle</item>
  </style>


</resources>
