<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_choose_ingredient"
        android:layout_width="match_parent"
        app:titleTextColor="@color/button_label"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu_main"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>
    <EditText
        android:id="@+id/edittext_choose_ingredient_search"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/search_here"
        android:textAppearance="@style/edittext"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_ingredient_search"
        app:layout_constraintRight_toLeftOf="@+id/imagebutton_ingredient_search"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_choose_ingredient"
        android:layout_gravity="right"
        />

    <ImageButton
        android:id="@+id/imagebutton_ingredient_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textview_item_option"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_choose_ingredient"
        app:layout_constraintLeft_toRightOf="@+id/edittext_choose_ingredient_search"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_baseline_search_24"
        android:src="@drawable/ic_baseline_option"
        />
    <TextView
        android:id="@+id/textview_title_new_ingredient_log_name_choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_padding"
        android:text="@string/textview_title_new_ingredient_log"
        android:textAlignment="center"
        android:textAppearance="@style/textview_title"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_choose_ingredient_search"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ingredient_name_choices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_choose_ingredient_save"
        app:layout_constraintTop_toBottomOf="@+id/textview_title_new_ingredient_log_name_choices"
        android:layout_marginTop="@dimen/medium_padding"
        android:background="@color/green_200"
        android:fadeScrollbars="false"
        android:nestedScrollingEnabled="false"
        android:padding="@dimen/medium_padding"
        android:scrollbars="vertical" />


    <Button
        android:id="@+id/button_choose_ingredient_save"
        android:text="@string/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/button_save"
        android:layout_margin="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_ingredient_name_choices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_choose_ingredient_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_margin="@dimen/big_padding"
        android:textAppearance="@style/button_choose"
        app:backgroundTint="@color/blue_500"
        app:layout_constraintVertical_bias="0.90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.20"/>

</androidx.constraintlayout.widget.ConstraintLayout>