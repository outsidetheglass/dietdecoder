<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ingredient.AddEditIngredientActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_addedit_ingredient"
        android:layout_width="match_parent"
        app:titleTextColor="@color/button_label"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu_main"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:layout_constraintBottom_toTopOf="@+id/textview_title_addedit_ingredient"/>

    <TextView
        android:id="@+id/textview_title_addedit_ingredient"
        android:text="@string/title_textview_addedit_ingredient"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAppearance="@style/textview_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_addedit_ingredient"/>

    <TextView
        android:id="@+id/title_textview_addedit_ingredient_name"
        android:text="@string/ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/textview_main_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title_addedit_ingredient"/>

    <EditText
        android:id="@+id/value_edittext_addedit_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/edittext"
        android:hint="@string/enter_ingredient_edittext_name"
        android:layout_margin="@dimen/tiny_padding"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textview_addedit_ingredient_name"
        />

    <TextView
        android:id="@+id/title_textview_addedit_ingredient_brand"
        android:text="@string/what_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/small_padding"
        android:textAppearance="@style/textview_main_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_edittext_addedit_ingredient_name"/>

    <EditText
        android:id="@+id/value_edittext_addedit_ingredient_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/edittext"
        android:hint="@string/enter_ingredient_edittext_brand"
        android:layout_margin="@dimen/tiny_padding"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textview_addedit_ingredient_brand"
        />

    <Button
        android:id="@+id/button_addedit_ingredient_save"
        android:text="@string/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/button_save"
        android:layout_margin="@dimen/small_padding"
        android:layout_marginTop="@dimen/medium_padding"
        app:layout_constraintTop_toBottomOf="@+id/value_edittext_addedit_ingredient_brand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
