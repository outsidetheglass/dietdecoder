<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout_ingredient_amount_log"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
      android:id="@+id/textview_title_ingredient_amount_log_name_fragment"
      android:text="@string/title_textview_new_log"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginTop="10dp"
      android:textAlignment="center"
      android:textAppearance="@style/textview_title"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  <!--      android:textAppearance="@style/textview_title"-->


  <TextView
      android:id="@+id/textview_question_ingredient_amount_log"
      android:text="@string/question_textview_ingredient_amount_log"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/small_padding"
      android:textAlignment="center"
      android:textAppearance="@style/textview_main_content"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_title_ingredient_amount_log_name_fragment"/>

  <TextView
      android:id="@+id/subsubtitle_textview_ingredient_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ingredient_detail_name_textview"
      android:padding="@dimen/small_padding"
      android:textStyle="bold|italic"
      android:textAppearance="@style/textview_main_content"
      android:layout_marginLeft="@dimen/big_padding"
      android:layout_marginTop="@dimen/bigger_padding"
      app:layout_constraintHorizontal_bias="0.45"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_question_ingredient_amount_log"
      />

    <NumberPicker
        android:id="@+id/numberpicker_ingredient_amount"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subsubtitle_textview_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



  <Button
      android:id="@+id/button_ingredient_amount_log_save"
      android:text="@string/button_save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/small_padding"
      android:textAppearance="@style/button_save"
      app:layout_constraintTop_toBottomOf="@+id/numberpicker_ingredient_amount"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
