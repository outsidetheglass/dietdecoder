<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".activity.ingredient.ListIngredientActivity"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/my_toolbar_list_ingredient"
      android:layout_width="match_parent"
      app:titleTextColor="@color/button_label"
      android:layout_height="?attr/actionBarSize"
      app:menu="@menu/menu_main"
      android:background="?attr/colorPrimary"
      android:elevation="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
      app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>
  <EditText
      android:id="@+id/edittext_list_ingredient_search"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      app:layout_constraintHorizontal_bias="0.50"
      app:layout_constraintLeft_toLeftOf="parent"
      android:hint="@string/search_here"
      android:textAppearance="@style/edittext"
      app:layout_constraintEnd_toStartOf="@+id/imagebutton_list_ingredient_search"
      app:layout_constraintRight_toLeftOf="@+id/imagebutton_list_ingredient_search"
      app:layout_constraintTop_toBottomOf="@+id/my_toolbar_list_ingredient"
      android:layout_gravity="right"
      />
  <ImageButton
      android:id="@+id/imagebutton_list_ingredient_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/textview_item_option"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/my_toolbar_list_ingredient"
      app:layout_constraintLeft_toRightOf="@+id/edittext_list_ingredient_search"
      app:layout_constraintRight_toRightOf="parent"
      android:background="@drawable/ic_baseline_search_24"
      android:src="@drawable/ic_baseline_option"
      />
  <TextView
    android:id="@+id/textview_title_list_ingredient"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/small_padding"
    android:text="@string/title_textview_ingredient"
    android:textAlignment="center"
    android:textAppearance="@style/textview_title"
    app:layout_constraintHorizontal_bias="0.50"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edittext_list_ingredient_search"
    app:layout_constraintVertical_bias="0.05" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerview_list_ingredient"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.50"
      app:layout_constraintVertical_bias="0.20"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/add_button_list_ingredient"
      app:layout_constraintTop_toBottomOf="@+id/textview_title_list_ingredient"
      android:layout_marginTop="@dimen/medium_padding"
      android:background="@color/green_200"
      android:fadeScrollbars="false"
      android:nestedScrollingEnabled="false"
      android:padding="@dimen/medium_padding"
      android:scrollbars="vertical" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/add_button_list_ingredient"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_add_24"
    android:textAppearance="@style/button_save"
    android:layout_margin="@dimen/big_padding"
    app:layout_constraintVertical_bias="0.90"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.80"/>


</androidx.constraintlayout.widget.ConstraintLayout>
