<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.foodlog.FoodLogActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/my_toolbar_main"
      android:layout_width="match_parent"
      app:titleTextColor="@color/button_label"
      android:layout_height="?attr/actionBarSize"
      app:menu="@menu/menu_main"
      android:background="?attr/colorPrimary"
      android:elevation="4dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
      app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>
  <TextView
      android:id="@+id/textview_main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/small_padding"
      android:text="@string/textview_main_title"
      android:textAlignment="center"
      android:textAppearance="@style/textview_title"
      app:layout_constraintHorizontal_bias="0.50"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/my_toolbar_main"
      app:layout_constraintVertical_bias="0.05" />

  <Button
      android:text="@string/button_symptom_log"
      android:id="@+id/button_symptom_log"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/button_main"
      style="@style/button_main"
      android:layout_margin="@dimen/big_padding"
      app:layout_constraintTop_toBottomOf="@+id/textview_main_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>
  <Button
      android:id="@+id/button_food_log"
      android:text="@string/button_food_log"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/button_main"
      style="@style/button_main"
      android:layout_margin="@dimen/big_padding"
      app:layout_constraintTop_toBottomOf="@+id/button_symptom_log"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>
  <Button
    android:id="@+id/button_other"
      android:text="@string/button_other_activity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/button_main"
      style="@style/button_main"
      android:layout_margin="@dimen/big_padding"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.90"/>

</androidx.constraintlayout.widget.ConstraintLayout>
